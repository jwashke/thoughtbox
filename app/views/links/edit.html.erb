<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="edit-link-form">
      <h3 class="form-label">Edit Link <%= @link.name %></h3>
      <%= form_for(@link) do |f| %>
          <%= f.label :name %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: @link.name, class: "form-control" %>
        </div>
        <%= f.label :url %>
        <div class="form-group">
          <%= f.text_field :url, placeholder: @link.url, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Link", class: "btn btn-primary form-control" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
