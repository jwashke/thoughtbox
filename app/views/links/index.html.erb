<h1><%= current_user.email %>'s Links</h1>
<div class="new-link-form form-group">
  <h2>Create a new link</h2>
  <%= form_for(@link) do |f| %>
    <%= f.text_field :name, placeholder: "Name" %>
    <%= f.text_field :url, placeholder: "URL" %>
    <%= f.submit "Create Link" %>
  <% end %>
</div>

<div class="form-group">
  <input id="searchBar" type="text" class="form-control" placeholder="Search" />
  <button type="button" id="clearSearch" class="btn btn-primary">Clear</button>
</div>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default" id="all-button">All</button>
  <button type="button" class="btn btn-default" id="read-button">Read</button>
  <button type="button" class="btn btn-default" id="unread-button">Unread</button>
</div>

<div class="links">
  <div class="list-group">
  <% @links.each do |link| %>
        <% if link.read %>
          <div class="link-<%= link.id %> read-link link list-group-item">
            <h4><%= link.name %></h4>
            <p><a href=<%= link.url %>><%= link.url %></a></p>
            <button class="unread" id="<%= link.id %>">Mark as unread</button>
            <%= link_to "Edit Link", edit_link_path(link) %>
          </div>
        <% else %>
          <div class="link-<%= link.id %> unread-link link list-group-item">
            <h4><%= link.name %></h4>
            <p><a href=<%= link.url %>><%= link.url %></a></p>
            <button class="read" id="<%= link.id %>">Mark as read</button>
            <%= link_to "Edit Link", edit_link_path(link) %>
          </div>
        <% end %>
  <% end %>
  </div>
</div>
